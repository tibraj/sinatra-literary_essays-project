FORM

    <form action="/literary_essays/<%= @literary_essay.id %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <label for="title">Title:</label>
        <textarea name="title" rows=1 columns=10><%= @literary_essay.title %></textarea>
        <br>
        <label for="content">Content:</label>
        <textarea name="content" rows=8 columns=30><%= @literary_essay.content %></textarea>
        <input type="submit" value="Edit Essay">
    </form>